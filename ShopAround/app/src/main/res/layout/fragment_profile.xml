<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_image_CV"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="36dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="40dp">

                <ImageView
                    android:id="@+id/user_image_IV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/avatar"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/bold"
                android:gravity="center_horizontal|center_vertical"
                android:text="Jessica Maria"
                android:layout_marginTop="16dp"
                android:textColor="@color/Black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/user_email_TV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular"
                android:gravity="center_horizontal|center_vertical"
                android:text="jessica_maria@example.com"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/save_address_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/save_address_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/save_address_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_map_pin"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/save_address_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="Saved Address"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/history_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/history_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/history_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/history"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/history_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="History"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/wishlist_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/wishlist_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/wishlist_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/wishlist"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/wishlist_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="WishList"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/profile_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/profile_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/account_user"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/profile_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="Profile"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/help_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/help_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/help_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_help_circle"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/help_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="Help Center"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/logout_CV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/logout_image_CV"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:backgroundTint="@color/md_grey_200"
                    android:layout_marginLeft="36px"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:id="@+id/logout_image_IV"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_log_out"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/logout_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:fontFamily="@font/medium"
                    android:text="Logout"
                    android:textColor="@color/Black"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>